CC = g++
NAME = ft_retro
CFLAGS = -Wall -Werror -Wextra
LFLAGS = -lncurses
SRC = Window.class.cpp Entity.class.cpp Monster.class.cpp Wall.class.cpp Player.class.cpp Shoot.class.cpp main.cpp
OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) -o $(NAME) $(OBJ) $(LFLAGS)
	@echo "\033[33;32m       ___                     ___           ___                       ___           ___     "
	@echo "\033[33;32m      /  /\\        ___        /  /\\         /  /\\          ___        /  /\\         /  /\\"
	@echo "\033[33;32m     /  /:/_      /  /\\      /  /::\\       /  /:/_        /  /\\      /  /::\\       /  /::\\"
	@echo "\033[33;32m    /  /:/ /\\    /  /:/     /  /:/\\:\\     /  /:/ /\\      /  /:/     /  /:/\\:\\     /  /:/\\:\\"
	@echo "\033[33;32m   /  /:/ /:/   /  /:/     /  /:/~/:/    /  /:/ /:/_    /  /:/     /  /:/~/:/    /  /:/  \\:\\"
	@echo "\033[33;32m  /__/:/ /:/   /  /::\\    /__/:/ /:/___ /__/:/ /:/ /\\  /  /::\\    /__/:/ /:/___ /__/:/ \\__\\:\\"
	@echo "\033[33;32m  \\  \\:\\/:/   /__/:/\\:\\   \\  \\:\\/:::::/ \\  \\:\\/:/ /:/ /__/:/\\:\\   \\  \\:\\/:::::/ \\  \\:\\ /  /:/"
	@echo "\033[33;32m   \\  \\::/    \\__\\/  \\:\\   \\  \\::/~~~~   \\  \\::/ /:/  \\__\\/  \\:\\   \\  \\::/~~~~   \\  \\:\\  /:/"
	@echo "\033[33;32m    \\  \\:\\         \\  \\:\\   \\  \\:\\        \\  \\:\\/:/        \\  \\:\\   \\  \\:\\        \\  \\:\\/:/"
	@echo "\033[33;32m     \\  \\:\\         \\__\\/    \\  \\:\\        \\  \\::/          \\__\\/    \\  \\:\\        \\  \\::/"
	@echo "\033[33;32m      \\__\\/                   \\__\\/         \\__\\/                     \\__\\/         \\__\\/"

%.o: %.cpp
	@$(CC) $(CFLAGS) -c $<
	@echo Compipiling object : $<

clean:
	@rm -rf $(OBJ)
	@echo cleaning

fclean: clean
	@rm -rf $(NAME)

re: fclean all
